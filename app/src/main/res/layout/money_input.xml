<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:tools="http://schemas.android.com/tools"
  android:layout_width="match_parent"
  android:layout_height="wrap_content"
  android:orientation="horizontal">

  <Button
    android:id="@+id/input_btn"
    android:layout_width="0dp"
    android:layout_height="@dimen/money_input_height"
    android:background="@drawable/input_left_bg"
    android:layout_weight="1"
    android:textColor="@color/wetasphalt"
    android:textSize="@dimen/money_text_height"
    android:textAllCaps="false"
    android:typeface="monospace"
    tools:text="1 Â¢" />

  <EditText
    android:id="@+id/input_text"
    android:layout_width="80dp"
    android:layout_height="@dimen/money_input_height"
    android:maxWidth="120dp"
    android:background="@drawable/input_right_bg"
    android:gravity="center"
    android:hint="0"
    android:imeOptions="flagNavigateNext"
    android:inputType="number"
    android:maxLines="1"
    android:textColor="@color/white"
    android:textColorHint="@color/white"
    android:textCursorDrawable="@color/white"
    android:textSize="@dimen/money_text_height"
    android:typeface="sans" />

</LinearLayout>